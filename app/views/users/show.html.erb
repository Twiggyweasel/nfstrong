<h1><%= @user.name %></h1>
<div class='container'>
  <div class='row'>
    <div class='col-12'>
      <h3>Events Attending</h3>
      <hr />
    </div>
  </div>
  <% @user.registrations.each do |r| %>
  <div class='row'>
    <div class='col-md-6 col-lg-4 mb-3'>
    <%= link_to(event_path(r.event)) do %>
      <div class='card w'>
        <img src='https://s3.amazonaws.com/nfeventimages/uploads/event/event_card/1/Lafayette_LA.jpg' class='card-img' />
        <div class='card-img-overlay overlay-shadow'>
          <h4 class="card-title"><%= event_name(r.event) %></h4>
          <h5><%= r.event.event_start.strftime("%b - %d") %></h5>
        </div>
      </div>
    <% end %>
    </div>
    <div class='col-md-6 col-lg-4 mb-3'>
      <div class="card bg-light">
        <div class="card-header">Actions</div>
        <div class="card-body">
          <%= link_to 'Manage Registration', '#', class: 'btn btn-secondary btn-block my-2' %>
          <%= link_to 'Offline Fundraising', registration_donations_path(r), class: 'btn btn-secondary btn-block my-2' %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
