<%= render 'shared/admin_title', title: "Registrations for #{event_name(@event)}" %>
<div class='row mx-4'>
  <div class='col-8 my-2'>
    <%= link_to "Return to Event", admin_event_path(@event), class: 'btn btn-sm btn-primary' %>
    <%= link_to(new_admin_event_registration_path(@event), class: 'btn btn-sm btn-success') do fa_icon 'plus', text: 'Create' end %>
  </div>
  <div class='col-4 my-2'>
    <%= search_form_for([:admin, @event, @q]) do |f| %>
      <div class='input-group'>
        <%= f.search_field :user_name_cont, class: 'form-control', placeholder: 'Search Users...' %>
        <span class='input-group-btn'>
          <%= f.submit(class: 'btn btn-primary') do fa_icon 'search' end%>
        </span>
      </div>
    <%= link_to('Cancel Search', request.path, class:"btn btn-danger btn-block my-2") unless @q.conditions.empty? %>
    <% end %>
  </div>
</div>
<div class='row mx-4'>
  <div class='col-lg-4 mt-3'>
    <h4>Name</h4>
  </div>
  <div class='col-lg-2 mt-3'>
    <h4>Guests</h4>
  </div>
  <div class='col-lg-2 mt-3'>
    <h4>Raised</h4>
  </div>
  <div class='col-lg-2 mt-3'>
    <h4>Paid</h4>
  </div>
</div>
<% @registrations.each do |registration| %>
  <%= render 'registration', registration: registration %>
<% end %>
<div class='row'>
  <div class='col-12 my-2' id='paginator'>
    <%= paginate @registrations %>
  </div>
</div>