<%= form_for(@event) do |f| %>
<div class='row my-3 pl-3'>
  <div class='col-12'>
    <h2>General Settings</h2>
  </div>
</div>
<div class='row justify-content-md-center pl-5'>
  <div class='col-6 pl-5'>
    <label class="custom-control custom-checkbox">
      <input type="checkbox" class="custom-control-input"><%= f.check_box :has_shirts, class: 'custom-control-input' %>
      <span class="custom-control-indicator"></span>
      <span class="custom-control-description">Private Event</span>
    </label>  
    <br />
    <label class="custom-control custom-checkbox">
      <input type="checkbox" class="custom-control-input"><%= f.check_box :has_shirts, class: 'custom-control-input' %>
      <span class="custom-control-indicator"></span>
      <span class="custom-control-description">Offer T-Shirts</span>
    </label>  
    <br />
    <label class="custom-control custom-checkbox">
      <input type="checkbox" class="custom-control-input"><%= f.check_box :has_donations, class: 'custom-control-input' %>
      <span class="custom-control-indicator"></span>
      <span class="custom-control-description">Allows Sponsorship</span>
    </label> 
  </div>
  
  <div class='col-6 pl-5'>
    <label class="custom-control custom-checkbox">
      <input type="checkbox" class="custom-control-input"><%= f.check_box :has_donations, class: 'custom-control-input' %>
      <span class="custom-control-indicator"></span>
      <span class="custom-control-description">Allow Donations</span>
    </label> 
    <br />
    <label class="custom-control custom-checkbox">
      <input type="checkbox" class="custom-control-input"><%= f.check_box :has_donations, class: 'custom-control-input' %>
      <span class="custom-control-indicator"></span>
      <span class="custom-control-description">Has Fundraising</span>
    </label>
    <label class="custom-control custom-checkbox">
      <input type="checkbox" class="custom-control-input"><%= f.check_box :is_external, class: 'custom-control-input' %>
      <span class="custom-control-indicator"></span>
      <span class="custom-control-description">External Event</span>
    </label> 
  </div>
</div>

<div class='row my-3 pl-3'>
  <div class='col-12'>
    <h2>Registration Type</h2>
  </div>
</div>


<div class='row my-3 pl-5'>
  <div class='col-12'>
    <div class="btn-group" data-toggle="buttons">
      <label class="btn btn-primary active">
        <input type="radio" name="options" id="option1" autocomplete="off" checked> Basic Registration
      </label>
      <label class="btn btn-primary">
        <input type="radio" name="options" id="option2" autocomplete="off"> Ticket Based
      </label>
    </div>
  </div>
</div>

<div class='row my-3 pl-3'>
  <div class='col-12'>
    <h2>Display Options</h2>
  </div>
</div>
<div class='row justify-content-md-center pl-5'>
  <div class='col-6 pl-5'>
    <label class="custom-control custom-checkbox">
      <input type="checkbox" class="custom-control-input"><%= f.check_box :has_progress, class: 'custom-control-input' %>
      <span class="custom-control-indicator"></span>
      <span class="custom-control-description">Show Progress Bar</span>
    </label>  
    <br />
    <label class="custom-control custom-checkbox">
      <input type="checkbox" class="custom-control-input"><%= f.check_box :has_shirts, class: 'custom-control-input' %>
      <span class="custom-control-indicator"></span>
      <span class="custom-control-description">Show Resources</span>
    </label> 
  </div>
  
  <div class='col-6 pl-5'>
    <label class="custom-control custom-checkbox">
      <input type="checkbox" class="custom-control-input"><%= f.check_box :has_shirts, class: 'custom-control-input' %>
      <span class="custom-control-indicator"></span>
      <span class="custom-control-description">Show Sponsors</span>
    </label> 
    <br />
    <label class="custom-control custom-checkbox">
      <input type="checkbox" class="custom-control-input"><%= f.check_box :has_shirts, class: 'custom-control-input' %>
      <span class="custom-control-indicator"></span>
      <span class="custom-control-description">Show Top Fundraisers</span>
    </label> 
  </div>
</div>

<div class='row my-3 pl-3'>
  <div class='col-12'>
    <h2>Social Media Options</h2>
  </div>
</div>

<div class='row justify-content-md-center my-2'>
  <div class='col-md-10'>
    <%= f.label "Social Post Image" %>
    <%= f.file_field :zipcode, class: 'form-control-file' %>
  </div>
</div>
<div class='row justify-content-md-center my-2'>
  <div class='col-md-10'>
    <%= f.label "Social Post Text" %>
    <%= f.text_area :zipcode, class: 'form-control' %>
    <small id="passwordHelpBlock" class="form-text text-muted">
      Input should not exceed 100 characters
    </small>
  </div>
  
</div>

<div class='row my-4 justify-content-md-center'>
  <div class='col-md-4'>
    <%= f.submit "Submit Changes", class: 'btn btn-success btn-block' %>
  </div>
  <div class='col-md-4'>
    <%= link_to "Discard Changes", admin_event_path(@event), class: "btn btn-danger btn-block" %>
  </div>
</div>
<% end %>