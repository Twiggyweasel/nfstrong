<div class='row mx-4 mt-4'>
  <div class='col-md-9'>
    <h1 class='display-4'>NFStrong Events</h1>
    <hr />
  </div>
  <div class='col-md-3 mt-3'>
    <%= link_to "New Event", new_admin_event_path(), class: 'btn btn-primary btn-block' %>
  </div>
</div>

<div class='row mx-4'>
  <div class='col-12'>
    <ul class="nav nav-pills" id="myTab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="active-tab" data-toggle="tab" href="#active" role="tab" aria-controls="active" aria-expanded="true">Active</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="inactive-tab" data-toggle="tab" href="#inactive" role="tab" aria-controls="inactive">Inactive</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="private-tab" data-toggle="tab" href="#private" role="tab" aria-controls="private">Private</a>
      </li>
    </ul>
  </div>
</div>

<div class='row mx-4'>
  <div class='col-12'>
    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade show active" id="active" role="tabpanel" aria-labelledby="active-tab">
        <div class='row mt-4 mb-3 d-none d-sm-flex'>
          <div class='col-4 col-lg-3'>
            <h5>Title</h5>
          </div>
          <div class='col-4 col-lg-2'>
            <h5>Date</h5>
          </div>
          <div class='col-4 col-lg-3'>
            <h5>Goal/Progress</h5>
          </div>
        </div>
        <% if @events.not_private.any? %>
          <% @events.not_private.each do |event| %>
           <%= render 'event', event: event %>
          <% end %>
        <% else %>
          <%= render 'no_events', status: "Active", type: "Public" %>
        <% end %>
      </div>
      <div class="tab-pane fade" id="inactive" role="tabpanel" aria-labelledby="inactive-tab">
        <div class='row mt-4 mb-3 d-none d-sm-flex'>
          <div class='col-4 col-lg-3'>
            <h5>Title</h5>
          </div>
          <div class='col-4 col-lg-2'>
            <h5>Date</h5>
          </div>
          <div class='col-4 col-lg-3 text-center'>
            <h5>Goal/Progress</h5>
          </div>
        </div>
        <% if @events.inactive.any? %>
          <% @events.inactive.each do |event| %>
           <%= render 'event', event: event %>
          <% end %>
        <% else %>
          <%= render 'no_events', status: "Inactive", type: "" %>
        <% end %>
      </div>
      <div class="tab-pane fade" id="private" role="tabpanel" aria-labelledby="private-tab">
        <div class='row mt-4 mb-3 d-none d-sm-flex'>
          <div class='col-4 col-lg-3'>
            <h5>Title</h5>
          </div>
          <div class='col-4 col-lg-2'>
            <h5>Date</h5>
          </div>
          <div class='col-4 col-lg-3 text-center'>
            <h5>Goal/Progress</h5>
          </div>
        </div>
        <% if @events.is_private.any? %>
          <% @events.is_private.each do |event| %>
           <%= render 'event', event: event %>
          <% end %>
        <% else %>
          <%= render 'no_events', status: "Active", type: "Private" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
