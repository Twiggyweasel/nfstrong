<div class='row'>
  <div class='col-12 my-3'>
    <div class='card'>
      <div class='card-body'>
        <div class='row'>
          <div class='col-sm-4 col-lg-3'>
            <%= event_name(event) %>
          </div>
          <div class='col-sm-4 col-lg-2'>
            <%= event.event_start.strftime("%b %d, %Y") %>
          </div>
          <div class='col-sm-4 col-lg-3'>
            <%= number_to_currency(event.goal) %>/
            <%= number_to_currency(200.00) %>
          </div>
          <div class='col text-right mr-3 d-sm-none d-lg-block'>
            <%= link_to(event_path(event)) do fa_icon "eye", class: 'fa-2x mx-2 b' end %>
            <%= link_to(admin_event_path(event)) do fa_icon "dashboard", class: 'fa-2x mx-2 b' end %>
            <%= link_to(edit_admin_event_path(event)) do fa_icon "pencil", class: 'fa-2x mx-2 b' end %>
            <%= link_to(admin_event_path(event)) do fa_icon "trash", class: 'fa-2x mx-2 b' end %>
          </div>
        </div>
        <div class='row d-lg-none'>
          <div class='col-12'>
            <div class='row'>
              <div class='col-md-3 my-2'>
                <%= link_to(event_path(event), class: 'btn btn-primary btn-block') do fa_icon "eye", class: "fa-2x" end %>
              </div>
              <div class='col-md-3 my-2'>
                <%= link_to(admin_event_path(event), class: 'btn btn-primary btn-block') do fa_icon "dashboard", class: "fa-2x" end %>
              </div>
              <div class='col-md-3 my-2'>
                <%= link_to(edit_admin_event_path(event), class: 'btn btn-primary btn-block') do fa_icon "pencil", class: "fa-2x" end %>
              </div>
              <div class='col-md-3 my-2'>
                <%= link_to(admin_event_path(event), class: 'btn btn-primary btn-block') do fa_icon "trash", class: "fa-2x" end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>